{
  "name": "steroid",
  "version": "0.0.1",
  "description": "very futuristic",
  "main": "./build/run.js",
  "scripts": {
    "compile": "tsc && copyfiles -f index.html build",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run compile && electron ./build/run.js",
    "deploy": "electron-builder --linux"
  },
  "author": {
    "name": "cottons",
    "email": "kimtaeyoung0205@naver.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/cottons-kr/watermelon",
  "devDependencies": {
    "@electron/remote": "^2.0.8",
    "@types/youtube-player": "^5.5.6",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13",
    "eslint": "^8.11.0",
    "module-alias": "^2.2.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2",
    "youtube-player": "^5.5.2"
  },
  "build": {
    "productName": "watermelon",
    "appId": "com.serendev.watermelon",
    "asar": true,
    "protocols": {
      "name": "watermelon",
      "schemes": [
        "watermelon"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/",
      "app": "."
    }
  },
  "dependencies": {
    "@types/puppeteer": "^5.4.5",
    "billboard-top-100": "^2.6.2",
    "puppeteer": "^13.5.1",
    "puppeteer-core": "^13.5.1"
  },
  "_moduleAliases": {
    "@src": "./src"
  }
}
